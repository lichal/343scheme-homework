(define tax 0.065)
(define tax2 1.065)

(define (main)
	(newline)
	(newline)
	(display "Scheme Point-of-Sale")
	(newline)
	(display "Start transaction (exit with 0):")
	(newline)
	(define total (calcTax))
	(newline)
	(display "Total: $")
	(write total)
)

(define (calcTax)
	(define subtotal (start))
	(display "Subtotal: $")
	(write subtotal)
	(newline)
	(display "Tax: $")
	(write (* tax subtotal))
	(* subtotal tax2)
)

(define (start)
	(display "Enter value: ")
	(define input (read))
	(display "$")
	(write input)
	(newline)
	(if (= input 0) 
		0		 
		( + (write (input (start)))
	)

)

(main)
